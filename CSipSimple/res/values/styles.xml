<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="list_left_column">
        <item name="android:layout_width">68dip</item>
        <item name="android:layout_height">68dip</item>
    </style>

    <style name="TextAppearance.SlidingTabNormal" parent="@android:attr/textAppearanceMedium">
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">5.0</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.SlidingTabActive" parent="@android:attr/textAppearanceMedium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">28sp</item>
    </style>

    <!-- Toggle buttons in the in-call onscreen touch UI. -->

    <style name="DialtactsDialpadButtonStyle">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/actionBarItemBackground</item>
    </style>

    <style name="DialtactsDigitsTextAppearance">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textSize">@dimen/dialpad_digits_text_size</item>
        <item name="android:freezesText">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:editable">true</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="DialPadRow">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">0.25</item>
    </style>

    <style name="homeTabIndicatorText">
        <item name="android:textColor">@color/tab_cond_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="formWhiteBlock">

        <!-- <item name="android:background">@drawable/form_white_background</item> -->
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="QuickActionAboveAnimation">
        <item name="android:windowEnterAnimation">@anim/quickaction_above_enter</item>
        <item name="android:windowExitAnimation">@anim/quickaction_above_exit</item>
    </style>

    <style name="QuickActionBelowAnimation">
        <item name="android:windowEnterAnimation">@anim/quickaction_below_enter</item>
        <item name="android:windowExitAnimation">@anim/quickaction_below_exit</item>
    </style>
	<!-- ENTER THE NEW THEME -->
	<style name="Theme.Halohalo" parent="@style/Theme.Sherlock">
        <item name="actionBarItemBackground">@drawable/selectable_background_halohalo</item>
        <item name="popupMenuStyle">@style/PopupMenu.Halohalo</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Halohalo</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Halohalo</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Halohalo</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Halohalo</item>
        <item name="actionModeBackground">@drawable/cab_background_top_halohalo</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_halohalo</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Halohalo</item>

        
    </style>

    <style name="ActionBar.Solid.Halohalo" parent="@style/Widget.Sherlock.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_halohalo</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_halohalo</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_halohalo</item>
        <item name="progressBarStyle">@style/ProgressBar.Halohalo</item>
    </style>

    <style name="ActionBar.Transparent.Halohalo" parent="@style/Widget.Sherlock.ActionBar">
        <item name="background">@drawable/ab_transparent_halohalo</item>
        <item name="progressBarStyle">@style/ProgressBar.Halohalo</item>
    </style>
	
    <style name="PopupMenu.Halohalo" parent="@style/Widget.Sherlock.ListPopupWindow">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_halohalo</item>	
    </style>
	
    <style name="DropDownListView.Halohalo" parent="@style/Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_halohalo</item>
    </style>

    <style name="ActionBarTabStyle.Halohalo" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_halohalo</item>
    </style>
	
    <style name="DropDownNav.Halohalo" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_halohalo</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_halohalo</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_halohalo</item>
    </style>
    
    <style name="ProgressBar.Halohalo" parent="@style/Widget.Sherlock.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_halohalo</item>
    </style>
    
    <style name="ActionButton.CloseMode.Halohalo" parent="@style/Widget.Sherlock.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_halohalo</item>
    </style>
    <!-- END THE NEW THEME -->
    
    <style name="DarkTheme" parent="Theme.Sherlock"></style>

    <style name="DarkTheme.Dialog" parent="Theme.Sherlock.Dialog">

        <!-- TODO : use android:attr on 11 -->
        <item name="actionBarItemBackground">@drawable/abs__item_background_holo_dark</item>
        <!--
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@drawable/panel_background</item>
        -->
    </style>

    <style name="DarkTheme.NoTitle" parent="Theme.Sherlock.NoActionBar">
        <item name="actionBarItemBackground">@drawable/abs__item_background_holo_dark</item>
    </style>

    <!-- Notification -->
    <style name="NotificationText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="NotificationTitle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonBar" parent="@android:style/ButtonBar" />

    <style name="ButtonBarButton" parent="@android:style/Widget.Button" />

    <style name="ButtonBar.AlertDialog" parent="@android:style/ButtonBar" />
 	
</resources>